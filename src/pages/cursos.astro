---
import Layout from "../layouts/Layout.astro";
import CursoCard from "../components/CursoCard.astro";
import type {Course} from "@prisma/client";

const data: Course[] = await fetch(`${import.meta.env.PUBLIC_VERCEL_URL}/api/course`)
  .then((res) => res.json())
  .catch((err) => console.log(err));
---

<Layout title="Preços | Ski da Serra">
  <section>
    <h1 class="mt-12 text-center text-5xl font-bold text-primary">Cursos</h1>
    <div
      class="mt-5 grid w-full grid-cols-3 grid-rows-1 gap-8 text-white md:grid-cols-3"
    >
      {
        data.map((course) => (
          <CursoCard
            id={course.id}
            name={course.title}
            price={Number(course.price)}
            image={course.image}
            description={course.description}
          />
        ))
      }
    </div>
  </section>
  <section>
    <div class="mt-12 max-w-prose">
      <h1 class="mb-5 mt-5 text-4xl font-bold text-primary">Concelhos</h1>
      <h3 class="text-2xl font-medium text-primary">
        <span class="underline">Aprenda a técnica correta:</span> É importante começar
        a aprender a técnica correta desde o início para evitar lesões.
      </h3>
      <h3>
        <span class="underline">Vista-se adequadamente:</span> Esquiar pode ser muito
        frio, então é importante vestir-se adequadamente para evitar hipotermia!.
      </h3>
      <h3>
        <span class="underline">Não se arme em esperto:</span> Não tente esquiar
        em pistas muito avançadas logo no início.
      </h3>
    </div>
  </section>
</Layout>
