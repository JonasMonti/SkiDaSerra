---
import Layout from "../layouts/Layout.astro";
import CursoCard from "../components/CursoCard.astro";
---

<Layout title="Preços | Ski da Serra" />
<section>
    <h1 class=" mt-12 text-center text-5xl font-bold ">Cursos</h1>
    <div
      class="mt-2 grid w-full grid-cols-1 grid-rows-3 gap-8 text-white md:grid-cols-12 md:grid-rows-3"
    >
      <CursoCard
        name="Curso Basico"
        text="150"
        image="/01.png"
        position="md:col-start-1 md:col-end-5"
      />
      <CursoCard
        name="Curso Avançado"
        text="450"
        image="/02.png"
        position="md:col-start-5 md:col-end-9"
      />
      <CursoCard
        name="Curso Experiente"
        text="750"
        image="/03.png"
        position="md:col-start-9 md:col-end-13"
      />
    </div>
  </section>
